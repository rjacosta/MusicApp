<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.romel.musicapp.SongsActivity">

    <LinearLayout
        android:id="@+id/add_delete_songs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <Button
            android:id="@+id/add_songs_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_songs_text"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/delete_songs_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_songs_text"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/songs_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_delete_songs_layout"
        android:layout_alignParentStart="true" />


</RelativeLayout>
